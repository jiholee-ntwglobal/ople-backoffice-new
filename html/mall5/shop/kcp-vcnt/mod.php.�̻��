<script language='javascript'>
function  jsf__go_mod( form )
{
    if ( form.mod_type.value != 'mod_type_not_sel' )
    {
        if ( form.tno.value.length < 14 )
        {
            alert( "KCP 거래 번호를 입력하세요" );
            form.tno.focus();
            form.tno.select();
        }
        else
        {
            form.submit();
        }
    }
    else
    {
        alert( "거래 구분을 선택하여 주십시요." );
        form.mod_type.focus();
    }
}

</script>
</head>
